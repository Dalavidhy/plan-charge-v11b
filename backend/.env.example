# Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/plancharge

# Redis
REDIS_URL=redis://localhost:6379/0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Security
JWT_SECRET_KEY=your-secret-key-here-change-this-in-production

# External APIs
PAYFIT_API_KEY=
PAYFIT_COMPANY_ID=
GRYZZLY_API_KEY=

# Azure AD Configuration (REQUIRED - SSO is mandatory)
# Get these values from Azure Portal > App Registrations
AZURE_AD_TENANT_ID=your-tenant-id-here  # Required
AZURE_AD_CLIENT_ID=your-client-id-here  # Required
AZURE_AD_CLIENT_SECRET=your-client-secret-here  # Required
AZURE_AD_REDIRECT_URI=http://localhost:3200/auth/callback

# SSO Settings (Do not change these)
FEATURE_SSO=true
SSO_MANDATORY=true
SSO_ALLOWED_DOMAINS=nda-partners.com  # Only @nda-partners.com emails allowed

# CORS (comma-separated list)
CORS_ORIGINS=http://localhost:3200,http://localhost:3000

# Environment
ENVIRONMENT=development
DEBUG=true
