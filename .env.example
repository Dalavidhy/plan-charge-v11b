# Plan Charge v9 Environment Variables

# Environment
ENVIRONMENT=development

# Database
DATABASE_URL=postgresql://plancharge:plancharge123@localhost:5432/plancharge
POSTGRES_PASSWORD=plancharge123

# Redis
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Security
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# API Settings
API_V1_STR=/api/v1
PROJECT_NAME="Plan Charge v9"
VERSION=1.0.0

# Pagination
DEFAULT_PAGE_SIZE=50
MAX_PAGE_SIZE=100

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# File Storage (S3-compatible)
S3_ENDPOINT_URL=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_BUCKET_NAME=plancharge-attachments
S3_REGION=eu-west-1

# Email (Optional for v1)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@plancharge.example.com

# External Integrations
PAYFIT_API_URL=https://partner-api.payfit.com
PAYFIT_API_KEY=
PAYFIT_COMPANY_ID=

GRYZZLY_API_URL=https://api.gryzzly.com/v1
GRYZZLY_API_KEY=

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring (Optional)
SENTRY_DSN=
PROMETHEUS_ENABLED=false

# Feature Flags
FEATURE_BULK_IMPORT=true
FEATURE_ADVANCED_REPORTS=true
FEATURE_INTEGRATIONS=true
FEATURE_WEBHOOKS=false